<h1>Burgers!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{this.burger_name}}

        <button class="change-devoured" data-id="{{id}}" data-eat="{{devoured}}">
            Devour it!
        </button>
    </li>

    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are eaten!</h2>

<ul>
    {{#each burgers}}
    {{#if devouured}}

    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Sleepy?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Cat</button>
</form>